<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/defaultsub"
        android:contentDescription="Submission Thumbnail" />

    <TextView
        android:id="@+id/nsfw"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNSFW"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="NSFW"/>

    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/nsfw"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Title"/>

    <TextView
        android:id="@+id/createdTime"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Created Time"/>

    <TextView
        android:id="@+id/subreddit"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/createdTime"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Subreddit"/>


</RelativeLayout>